{% for item in items %}  
  {% set block = item.content['#block_content'] %}
  {% set url = block.field_button_link.uri %}
  {% set title = block.field_button_link.title %}
  {% if 'internal' in url %}
    {% set url %}{{ url('<front>') }}{{ url[10:] }}{% endset %}
  {% endif %}
  <a href="{{ url }}" class="{{ item.content.field_button_style }} {{ item.content.field_button_color }} {{ item.content.field_button_size }} button" target="_blank">{{ title }}</a>
{% endfor %}