<div{{ attributes.addClass('comment js-comment') }}>  
  <div class="meta clearfix">
    {% if content.links %}
      {{ content.links }}
    {% endif %}
    {{ user_picture }}
    <div class="author">
      <span>{{ author }}</span>
      {{ created }}
    </div>
  </div>
  <div class="content">
    {% if title %}
      {{ title_prefix }}
      <h4 class="title">{{ title }}</h3>
      {{ title_suffix }}
    {% endif %}
    {{ content|without('links') }}
  </div>
</div>
