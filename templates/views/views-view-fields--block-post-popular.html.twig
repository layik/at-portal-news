{% set counter %}{{ fields['counter'].content }}{% endset %}

{% if '1' in counter|render  %}
  <div class="image-default">{{ fields['field_image_1'].content }}</div>
  <div class="content">
    <div class="category">{{ fields['field_category'].content }}</div>    
    <h4>{{ fields['title'].content }}</h4>  
    <div><div class="meta author">By {{ fields['uid'].content }}</div></div>
  </div>
{% else %}
  <div class="image-default">{{ fields['field_image'].content }}</div>
  <div class="content">
    <div class="meta"><div class="float-right">{{ fields['field_category'].content }}</div>{{ fields['created'].content }}</div>
    <h4>{{ fields['title'].content }}</h4>  
    <div class="meta author">By {{ fields['uid'].content }}</div> 
  </div>
{% endif %}